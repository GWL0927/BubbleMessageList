/**index.wxss**/
.img {
  position: absolute;
  left: 50%;
  top: 10%;
  transform: translateX(-50%);
  border-radius: 1rem;
  box-shadow:  5px 5px 5px #888888, 5px 5px 10px #888888;
}
.login {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 0.6rem;
  box-shadow: 5px 5px 10px #888888;
  font-weight: bold;
}

#app {
  position: relative;
  width: 100vw;
  height: 91vh;
}

.nameInfo {
  width: 100vw;
  text-align: center;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font: bold 1.2rem "微软雅黑";
  color: #fff;
  text-shadow: 0 0 3px #888888, 3px 3px 7px #888888, 5px 5px 12px #888888;
}

.tag {
  position: absolute;
  padding: .2em .4em;
  border-radius: 5px;
  max-width: 10rem;
  cursor: pointer;
}

.islike {
  text-align: right;
  font-size: 1rem;
  display: flex;
  justify-content: space-between;
}

.islike .aa {
  display: flex;
}

.islike .hover {
  font-size: 0.9rem;
  position: relative;
  top: 0.1rem;
  left: 0.1rem;
}

.send {
  position: absolute;
  bottom: 0;
  width: 100vw;
  height: 9vh;
  background-color: #fff;
  box-shadow: 5px 2px 10px #ccc;
  display: flex;
  border-radius: 0.9rem;
}

.send image {
  width: 11vw;
  height: 5vh;
  margin: 0.8vh 2vw;
  border-radius: 0.5rem;
}

.send input {
  width: 69vw;
  height: 5vh;
  margin: 0.8vh 2vw;
}

.send .send-btn {
  width: 20vw;
  height: 5vh;
  background-color: rgb(235, 235, 235);
  font-size: 0.8rem;
  text-align: center;
  line-height: 5vh;
  border-radius: 0.9rem;
  box-shadow: 2px 2px 8px #888888;
  margin: 0.8vh 2vw;
}

.btn-hover{
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 2px #888888;
}